
@model WebDungCuLamBanh.Models.DungCuModel
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h4>Cập nhật</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Administrator" asp-action="EditProduct" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_DungCu" />
            <input type="hidden" asp-for="DaXoa" value="0" />
            <input type="hidden" asp-for="SoLuong"/>
            <input type="hidden" asp-for="GiaNhap"/>
            <div class="form-group">
                <label asp-for="TenDungCu" class="control-label">Tên sản phẩm</label>
                <input asp-for="TenDungCu" class="form-control" required/>
                <span asp-validation-for="TenDungCu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaNhap" class="control-label">Giá nhập (₫)</label>
                <input asp-for="GiaNhap" class="form-control" type="number" disabled/>
                <span asp-validation-for="GiaNhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="GiaKhuyenMai" class="form-control" type="hidden"/>
                <span asp-validation-for="GiaKhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label">Giá bán (₫)</label>
                <input asp-for="Gia" class="form-control" type="number" required/>
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" disabled/>
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_LoaiDungCu" class="control-label">Loại dụng cụ</label>
                <select asp-for="Id_LoaiDungCu" class="form-control" asp-items="ViewBag.LoaiDungCu"></select>
                <span asp-validation-for="Id_LoaiDungCu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_NhaCungCap" class="control-label">Nhà cung cấp</label>
                <select asp-for="Id_NhaCungCap" class="form-control" asp-items="ViewBag.NhaCungCap"></select>
                <span asp-validation-for="Id_NhaCungCap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_NhaSanXuat" class="control-label">Nhà sản xuất</label>
                <select asp-for="Id_NhaSanXuat" class="form-control" asp-items="ViewBag.NhaSanXuat"></select>
                <span asp-validation-for="Id_NhaSanXuat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hình ảnh</label>
                <input name="imageInput" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ThongTin" class="control-label">Thông tin khác (Màu sắc, kích cỡ, hạn sử dụng,...)</label>
                <textarea asp-for="ThongTin" class="form-control" style="height:500px"></textarea>
                <span asp-validation-for="ThongTin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" style="height:500px"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Product">Trở về danh sách sản phẩm</a>
</div>
