@model IEnumerable<WebDungCuLamBanh.Models.BannerModel>

@{
    ViewData["Title"] = "Banner";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<p>
    <a asp-action="CreateBanner"><button type="button" class="btn btn-primary">Thêm banner mới</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Thứ tự
            </th>
            <th>
                Tên
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Liên kết
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Banner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenBanner)
                </td>
                <td>
                    <img src="@item.DuongDan" width="50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LienKet)
                </td>
                <td>
                    <a href="/Administrator/DeleteBanner?id=@item.Id_Banner">
                        Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
