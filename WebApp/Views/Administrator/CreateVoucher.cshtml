@model WebDungCuLamBanh.Models.MaGiamGiaModel
@{
    ViewData["Title"] = "Thêm mã giảm giá";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Thêm mã giảm giá</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Administrator" asp-action="CreateVoucher" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_MaGiamGia" class="control-label">Mã giảm giá</label>
                <input asp-for="Id_MaGiamGia" class="form-control" type="text" />
                <span asp-validation-for="Id_MaGiamGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenMaGiamGia" class="control-label">Tên</label>
                <input asp-for="TenMaGiamGia" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label asp-for="GiaTriGiam" class="control-label">Giá trị giảm (₫)</label>
                <input asp-for="GiaTriGiam" class="form-control" type="number" />
                <span asp-validation-for="GiaTriGiam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LuotSuDung" class="control-label">Lượt sử dụng</label>
                <input asp-for="LuotSuDung" class="form-control" type="number" />
                <span asp-validation-for="LuotSuDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
<div>
    <a asp-action="Voucher">Trở lại danh sách mã giảm giá</a>
</div>


