@model WebDungCuLamBanh.Models.DungCuModel
@{
    ViewData["Title"] = "Xoá sản phẩm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h3>Bạn có chắc muốn xoá?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <a>Mã: </a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_DungCu)
        </dd>
        <dt class="col-sm-2">
            <a>Tên: </a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenDungCu)

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_DungCu" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index">Trở lại danh sách sản phẩm</a>
    </form>
</div>
