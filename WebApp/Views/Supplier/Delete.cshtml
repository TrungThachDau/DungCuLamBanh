@model WebDungCuLamBanh.Models.NhaCungCapModel

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa nhà cung cấp này không?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenNhaCungCap)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>
        <dt class="col-sm-2">
           Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_NhaCungCap" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="DanhSach">Quay lại danh sách</a>
    </form>
</div>
