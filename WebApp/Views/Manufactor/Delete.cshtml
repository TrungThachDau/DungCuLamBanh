@model WebDungCuLamBanh.Models.NhaSanXuatModel

@{
    ViewData["Title"] = "Xoá nhà sản xuất";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3>Xác nhận xoá nhà sản xuất?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenNSX)
        </dd>
        <dt class = "col-sm-2">
            Địa chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_NhaSanXuat" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index">Trở lại danh sách</a>
    </form>
</div>
