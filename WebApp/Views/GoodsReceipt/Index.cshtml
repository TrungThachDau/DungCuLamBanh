@model IEnumerable<WebDungCuLamBanh.Models.HoaDonNhapHangModel>
@using WebDungCuLamBanh.Helpers
@{
    ViewData["Title"] = "Hoá đơn nhập hàng";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Danh sách hoá đơn nhập hàng</h1>
<div class="d-flex">
    <p>
        <a style="margin-right:15px;" asp-action="Create"> <button type="button" class="btn btn-primary">Thêm hoá đơn mới</button></a>
    </p>
    <div class="mr-3">
        <form asp-action="Index" asp-controller="GoodsReceipt" method="get" class="search-form">
            <input class="form-control col-sm-12 transparent-search-bar" type="search" name="search" placeholder="Tìm hoá đơn..." required>
            <input type="submit" value="Search" style="display: none;">
        </form>
    </div>
    <p>
        <a style="margin-right:15px;" asp-action="Index"> <button type="button" class="btn btn-danger">Bỏ tìm kiếm</button></a>
    </p>
</div>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Mã HD
            </th>
            <th>
                Ngày lập
            </th>
            <th>
                Số tiền
            </th>
            <th>
                Nhà cung cấp
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="/GoodsReceipt/AddProductToReceipt/@item.Id_HoaDonNhap">
                        @Html.DisplayFor(modelItem => item.Id_HoaDonNhap)
                </a>
                
            </td>
            <td>
                @Html.FormatTime(item.NgayLapHoaDon.Value)
            </td>
            <td style="text-align:right">
                @Html.FormatCurrency(item.TongTien.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaCungCap.TenNhaCungCap)
            </td>

        </tr>
}
    </tbody>
</table>
